<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/__picker_bg_material_item"
    android:orientation="horizontal"
>

    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/iv_dir_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />



        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_dir_cover"
            android:id="@+id/tv_dir_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textColor="#333333" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_dir_name"
            android:id="@+id/tv_dir_count"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="7dp"
            android:layout_height="wrap_content"
            android:textColor="#333333" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/__picker_line"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
